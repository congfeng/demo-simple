<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	
	<appender name="console-log" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss SSS\} %-5p] %m%n" />
		</layout>
	</appender>
	
	<appender name="file-log" class="org.apache.log4j.DailyMaxRollingFileAppender">
		<param name="file" value="${pom.log.file}" />
		<param name="append" value="true" />
		<param name="datePattern" value="'.'yyyy-MM-dd" />
		<param name="maxBackupIndex" value="30" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss SSS} %-5p]: %m%n" />
		</layout>
	</appender>
	
	<logger name="com.jisheng.peisong" additivity="false">
		<level value="${pom.log.level}" />
		<appender-ref ref="file-log"/>
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="file-log"/>
		<appender-ref ref="console-log" />
	</root>
	
</log4j:configuration>