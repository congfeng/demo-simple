<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cf.code.dao.NoticeDao">
	
	<insert id="insert" parameterType="com.cf.code.entity.Notice">
		INSERT INTO notice(notice_type,title,content,create_time)
		VALUES (#{noticeType},#{title},#{content},now())
		<selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER" statementType="STATEMENT">
			select last_insert_id()
		</selectKey>
	</insert>
	
	<update id="update">
	    UPDATE notice SET update_time = now()
		<if test="title != null">,title = #{title,jdbcType=VARCHAR}</if> 	
	    <if test="content != null">,content = #{content,jdbcType=VARCHAR}</if>
	    WHERE id = #{id,jdbcType=INTEGER}
	</update>
	
	<delete id="delete">
		DELETE FROM notice WHERE id = #{id}
	</delete>
	
</mapper>