<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- 扫描文件（自动将service层注入） -->
	<context:component-scan base-package="com.cf.code.service.**" />
	
	<bean id="MyContextLoader" class="com.cf.code.core.MyContextLoader" scope="singleton"  init-method="init"  destroy-method="destroy">
		<property name="uploadFolder" value="${pom.upload.folder}"/>
		<property name="uploadPath" value="${pom.upload.path}"/>
		<property name="imHost" value="${pom.im.host}"/>
		<property name="imPort" value="${pom.im.port}"/>
	</bean> 
	
</beans>