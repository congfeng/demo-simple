<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
    <!-- ============ 定时设置 ============ 
    	每10秒：*/10 * * * * ?
    	每10分钟：0 */10 * * * ?
		每天0:00运行： 0 0 0 * * ?  
		每天1:00运行： 0 0 1 * * ?   
		每1个小时执行一次    0 0 * * * ?  
		每5分钟： 0 0/5 * * * ? *
    -->

	<bean id="Demo" class="com.cf.code.job.DemoJob"/>
	
	<bean id="jobDetail_Demo" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
 		<property name="targetObject" ref="Demo" />
 		<property name="targetMethod" value="doit" />
 		<property name="concurrent" value="false"/>
	</bean>
    
	<bean id="cronTrigger_jobDetail_Demo" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobDetail_Demo" />
		<property name="cronExpression" value="0 0/1 * * * ? *" />
	</bean>
	
	<!-- 定时任务主配置 -->
	<bean id="nsScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean" scope="singleton" lazy-init="false"> 
		<property name="startupDelay" value="30" />
		<property name="autoStartup" value="true"/>
		<property name="triggers">
			<list>
				<ref local="cronTrigger_jobDetail_Demo" />
			</list>
		</property>
	</bean>

</beans>